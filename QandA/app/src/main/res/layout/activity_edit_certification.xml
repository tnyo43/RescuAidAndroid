<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/linearlayout_edit_certification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <Button
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="消去"
            android:background="@drawable/gray_button"
            android:id="@+id/btn_edit_delete"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center|top"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名前："/>
            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_edit_filename" />
            <Button
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="@drawable/gray_button"
                android:id="@+id/btn_edit_filename"
                android:textSize="20dp"
                android:text="更新"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="bottom"
        android:orientation="horizontal">


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_edit_qr"
            android:background="@drawable/button_qr"
            android:textStyle="bold"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_edit_show"
            android:background="@drawable/button_certification"
            android:textStyle="bold"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_edit_result"
            android:background="@drawable/button_result"
            android:textStyle="bold"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>