<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.1">
        <TextView
            android:id="@+id/explain_page"
            android:text="1/2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="right"/>
        <TextView
            android:id="@+id/textview_explain_heart_massage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="30dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageview_explain_heart_massage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearlayout_explain_button"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_explain_finish"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:background="@drawable/gray_button"
            android:text="応急手当を終了する"
            android:textSize="17dp"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/btn_explain_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/sankaku"
            android:rotation="180"/>

        <ImageView
            android:id="@+id/btn_explain_next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/sankaku"/>

    </LinearLayout>

</LinearLayout>