<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.1">
        <TextView
            android:id="@+id/explain_page2"
            android:text="1/2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="right"/>
        <TextView
            android:id="@+id/textview_explain_heart_massage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="30dp"/>

    </RelativeLayout>
    <ImageView
        android:id="@+id/imageview_explain_heart_massage2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearlayout_explain_button"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_explain_finish2"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:background="@drawable/gray_button"
            android:text="応急手当を終了する"
            android:textSize="13dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_explain_aed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/gray_button"
            android:layout_weight="1.5"
            android:text="AEDが到着した"
            android:textSize="13dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/btn_explain_back2"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_margin="7dp"
            android:layout_height="match_parent"
            android:src="@drawable/sankaku"
            android:rotation="180"/>

        <ImageView
            android:id="@+id/btn_explain_next2"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_margin="7dp"
            android:layout_height="match_parent"
            android:src="@drawable/sankaku"/>

    </LinearLayout>

</LinearLayout>