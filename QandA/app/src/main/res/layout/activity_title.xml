<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.haruka.rescue_aid.activities.TitleActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="right">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_title_history"
            android:text="履歴"
            android:background="@drawable/gray_button"
            android:layout_margin="2dp"
            android:textSize="25dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ImageView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/title"
        android:layout_above="@+id/linearlayout_title"
        android:id="@+id/imageView"
        android:layout_weight="3.2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:id="@+id/linearlayout_title"
        android:layout_weight="1.5">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/care_button"
            android:layout_margin="2dp"
            android:id="@+id/btn_title_care"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btn_title_qr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/qr_read_button"
            android:layout_margin="2dp"
            android:textSize="25sp" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/startbtn"
        android:background="@drawable/blue_button"
        android:text="問診開始"
        android:textSize="50sp"/>

</LinearLayout>
